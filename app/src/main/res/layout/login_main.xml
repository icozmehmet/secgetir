<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65FFB300"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="192dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <LinearLayout
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        >
        <ViewFlipper
            android:id="@+id/flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/giyim"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:id="@+id/giyimresmi"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:background="@drawable/giyim"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/giyimmetni"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="43dp"
                        android:gravity="center"
                        android:text="Giyin Ürümlerinde Dev İndirim"
                        android:textColor="@color/black">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/teknoloji"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:cardCornerRadius="10dp"
                >

                <LinearLayout
                    android:id="@+id/teknolojimresmi"
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/teknoloji"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/teknolojimetni"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="43dp"
                            android:gravity="center"
                            android:text="Teknoloji Ürümlerinde Dev İndirim"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/icecek"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:cardCornerRadius="10dp"
                >

                <LinearLayout
                    android:id="@+id/icecekresmi"
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icecek"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/iccecekmetni"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="43dp"
                            android:gravity="center"
                            android:text="İçecek Ürümlerinde Dev İndirim"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/yiyecek"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:cardCornerRadius="10dp"
                >

                <LinearLayout
                    android:id="@+id/yiyecekresmi"
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yiyecek"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/yiyecekmetni"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="43dp"
                            android:gravity="center"
                            android:text="Yiyecek Ürümlerinde Dev İndirim"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </ViewFlipper>
    </LinearLayout>

    <Button
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttoncolor"
        android:text="Kategiriler"
        app:backgroundTint="@color/buttoncolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/siparis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/buttoncolor"
        android:text="Siparişlerim"
        app:backgroundTint="@color/buttoncolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category" />

</androidx.constraintlayout.widget.ConstraintLayout>